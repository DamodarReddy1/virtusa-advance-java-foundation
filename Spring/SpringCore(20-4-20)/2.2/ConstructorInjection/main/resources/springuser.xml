<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">

	<bean id="student"
		class="com.virtusa.ConstructorInjection.bean.Student">
		<constructor-arg ref="laptop"></constructor-arg>
		<constructor-arg value="8072577"></constructor-arg>
		<constructor-arg value="Damodar Reddy"></constructor-arg>
	</bean>
	<bean id="laptop"
		class="com.virtusa.ConstructorInjection.bean.Laptop">
		<constructor-arg value="1"></constructor-arg>
		<constructor-arg value="Dell"></constructor-arg>
		<constructor-arg value="8Gb"></constructor-arg>


	</bean>
</beans> 